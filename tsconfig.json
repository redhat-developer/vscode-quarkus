{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"outDir": "out",
		"lib": [
			"es6"
		],
		"sourceMap": true,
		"rootDir": ".",
		"strict": true,   /* enable all strict type-checking options */
    /* Additional Checks */
    "noUnusedLocals": true,
    "noImplicitReturns": true, /* Report error when not all code paths in function return a value. */
  },
	"exclude": [
		"node_modules",
		".vscode-test"
  ]
}
